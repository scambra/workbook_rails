# your gem to rubygems.org.

# To use debugger
# gem 'pry-debugger'
group :test do
  gem 'capybara', '~> 2.1'
  gem 'simplecov', require: false
  gem 'simplecov_json_formatter'
  gem "rspec-rails"
  gem "sqlite3"
  gem "coveralls_reborn", require: false
end
